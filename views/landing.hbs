        .livreur .icon-box { background: rgba(255, 130, 0, 0.1); color: var(--ci-orange); }
        .admin .icon-box { background: rgba(44, 62, 80, 0.1); color: var(--ci-dark); }

        .card h3 { margin: 10px 0; font-size: 1.5rem; }
        .card p { color: #7f8c8d; font-size: 0.9rem; margin-bottom: 30px; }

        .btn {
