<!DOCTYPE html>
<html lang="fr" class="h-full bg-gray-100">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Administration PharmaCi - Minist√®re</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="h-full font-sans text-gray-900">
    <nav class="bg-green-800 shadow-lg">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-16">
                <div class="flex items-center">
                    <span class="text-white text-xl font-bold tracking-wider">üá®üáÆ MINIST√àRE DE LA SANT√â</span>
                </div>
                <div class="flex items-center">
                    <span class="text-green-200 text-sm mr-4" id="adminName">Admin</span>
                    <button onclick="logout()" class="bg-red-600 hover:bg-red-700 text-white px-3 py-1 rounded text-sm transition">D√©connexion</button>
                </div>
            </div>
        </div>
    </nav>

    <main class="max-w-7xl mx-auto py-10 px-4 sm:px-6 lg:px-8">
        <div class="md:flex md:gap-6">
            <div class="md:w-1/3 mb-6">
                <div class="bg-white shadow rounded-lg p-6">
                    <h2 class="text-lg font-bold text-gray-800 mb-4 border-b pb-2">‚ûï Enregistrer une Pharmacie</h2>
                    <form id="createPharmaForm" class="space-y-4">
                        <div>
                            <label class="block text-sm font-medium text-gray-700">Nom de la Pharmacie</label>
                            <input type="text" id="nom" required class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2 focus:ring-green-500 focus:border-green-500" placeholder="Ex: Pharmacie du Plateau">
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700">Num√©ro Pro (Login)</label>
                            <input type="tel" id="telephone" required class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2 focus:ring-green-500 focus:border-green-500" placeholder="Ex: 0707...">
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700">Mot de passe provisoire</label>
                            <input type="text" id="password" required class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2 focus:ring-green-500 focus:border-green-500" placeholder="Ex: 123456">
                        </div>
                        <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-green-700 hover:bg-green-800 focus:outline-none transition">
                            Cr√©er le compte Pro
                        </button>
                    </form>
                    <div id="msg" class="mt-3 text-center text-sm font-medium hidden"></div>
                </div>
            </div>

            <div class="md:w-2/3">
                <div class="bg-white shadow rounded-lg p-6 mb-6">
                    <h2 class="text-lg font-bold text-gray-800 mb-4">üìä Vue d'ensemble Nationale</h2>
                    <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 text-center">
                        <div class="p-4 bg-blue-50 rounded-lg border border-blue-100">
                            <p class="text-2xl font-bold text-blue-600">12</p>
                            <p class="text-xs text-blue-500 uppercase font-semibold">Pharmacies Connect√©es</p>
                        </div>
                        <div class="p-4 bg-green-50 rounded-lg border border-green-100">
                            <p class="text-2xl font-bold text-green-600">84</p>
                            <p class="text-xs text-green-500 uppercase font-semibold">M√©dicaments Trouv√©s</p>
                        </div>
                        <div class="p-4 bg-orange-50 rounded-lg border border-orange-100">
                            <p class="text-2xl font-bold text-orange-600">5</p>
                            <p class="text-xs text-orange-500 uppercase font-semibold">Demandes en cours</p>
                        </div>
                    </div>
                </div>

                <div class="bg-white shadow rounded-lg p-6">
                    <h2 class="text-lg font-bold text-gray-800 mb-4">Liste des Pharmaciens (Derniers inscrits)</h2>
                    <ul class="divide-y divide-gray-200 text-sm" id="userList">
                        <li class="py-2 text-gray-500 italic flex items-center">
                            <svg class="animate-spin -ml-1 mr-3 h-5 w-5 text-green-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                            </svg>
                            Chargement des donn√©es...
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </main>

    <script>
        // 1. V√©rification S√©curit√© (Est-ce un Admin ?)
        const token = localStorage.getItem('token');
        if (!token) window.location.href = '/auth/web/login';

        // --- FONCTION POUR CHARGER LA LISTE (AJAX) ---
        async function chargerPharmaciens() {
            try {
                // Appel vers notre nouvelle route Backend
                const res = await fetch('/users/pharmaciens', {
                    headers: { 'Authorization': 'Bearer ' + token }
                });

                if (res.ok) {
                    const pharmaciens = await res.json();
                    const listElement = document.getElementById('userList');
                    
                    // Si la liste est vide
                    if (pharmaciens.length === 0) {
                        listElement.innerHTML = '<li class="py-4 text-center text-gray-500 italic bg-gray-50 rounded">Aucun pharmacien inscrit pour le moment.</li>';
                        return;
                    }

                    // On vide le "Chargement..."
                    listElement.innerHTML = '';

                    // On g√©n√®re le HTML pour chaque pharmacien
                    pharmaciens.forEach(pharma => {
                        const li = document.createElement('li');
                        li.className = "py-3 flex justify-between items-center hover:bg-gray-50 px-2 rounded transition";
                        li.innerHTML = `
                            <div>
                                <p class="font-medium text-gray-900 flex items-center">
                                    <span class="w-2 h-2 bg-green-500 rounded-full mr-2"></span>
                                    ${pharma.nomComplet}
                                </p>
                                <p class="text-xs text-gray-500 ml-4">üìû ${pharma.telephone}</p>
                            </div>
                            <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-600 border border-gray-200">
                                ${new Date(pharma.dateInscription).toLocaleDateString('fr-FR')}
                            </span>
                        `;
                        listElement.appendChild(li);
                    });
                } else {
                     console.error("Erreur serveur lors du chargement de la liste");
                }
            } catch (error) {
                console.error("Erreur chargement:", error);
                document.getElementById('userList').innerHTML = '<li class="text-red-500 py-2">Impossible de charger la liste. V√©rifiez votre connexion.</li>';
            }
        }

        // --- 2. CR√âATION PHARMACIE ---
        document.getElementById('createPharmaForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const nom = document.getElementById('nom').value;
            const telephone = document.getElementById('telephone').value;
            const password = document.getElementById('password').value;
            const msg = document.getElementById('msg');

            try {
                const res = await fetch('/auth/inscription', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    // On force le r√¥le PHARMACIEN
                    body: JSON.stringify({ nom, telephone, password, role: 'PHARMACIEN' }) 
                });

                if (res.ok) {
                    msg.textContent = "‚úÖ Pharmacie cr√©√©e avec succ√®s !";
                    msg.className = "mt-3 text-center text-sm font-medium text-green-600 p-2 bg-green-50 rounded border border-green-200";
                    msg.classList.remove('hidden');
                    document.getElementById('createPharmaForm').reset();
                    
                    // RECHARGEMENT AUTOMATIQUE DE LA LISTE
                    chargerPharmaciens();
                    
                    // On cache le message de succ√®s apr√®s 3 secondes
                    setTimeout(() => msg.classList.add('hidden'), 3000);
                } else {
                    const data = await res.json();
                    msg.textContent = "‚ùå " + (data.message || "Erreur");
                    msg.className = "mt-3 text-center text-sm font-medium text-red-600 p-2 bg-red-50 rounded border border-red-200";
                    msg.classList.remove('hidden');
                }
            } catch (err) { console.error(err); }
        });

        function logout() {
            localStorage.clear();
            window.location.href = '/auth/web/login';
        }

        // Lancement imm√©diat au chargement de la page
        chargerPharmaciens();
    </script>
</body>
</html>
