                    <i class="fa-solid fa-right-from-bracket w-6"></i>
                    <span>D√©connexion</span>
                </button>
            </div>
        </nav>
    </div>

    <div class="md:pl-64 flex flex-col flex-1 h-full bg-gray-50">
        
        <header class="bg-white shadow-sm z-20 sticky top-0 px-8 py-4 flex justify-between items-center">
            <div>
                <h1 class="text-2xl font-bold text-gray-800">Pilotage des Commandes</h1>
                <p class="text-sm text-gray-500">G√©rez les demandes entrantes en temps r√©el</p>
            </div>
            <div class="flex items-center space-x-4">
                <div class="flex items-center bg-green-50 px-3 py-1 rounded-full border border-green-100">
                    <span class="relative flex h-3 w-3 mr-2">
                      <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"></span>
                      <span class="relative inline-flex rounded-full h-3 w-3 bg-green-500"></span>
                    </span>
                    <span class="text-sm font-medium text-green-700">Live Connect√©</span>
                </div>
                <div class="flex items-center pl-4 border-l border-gray-200">
                    <div class="text-right mr-3 hidden sm:block">
                        <span class="block text-sm font-bold text-gray-900" id="userNameDisplay">Pharmacien</span>
                        <span class="block text-xs text-gray-500">Abidjan</span>
                    </div>
                    <div class="h-10 w-10 rounded-full bg-slate-200 flex items-center justify-center text-slate-600 font-bold border-2 border-white shadow-sm">
                        <i class="fa-solid fa-user-doctor"></i>
                    </div>
                </div>
            </div>
        </header>

        <main class="p-6 md:p-8 overflow-y-auto">
            
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
                <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-100 flex items-center">
                    <div class="p-3 rounded-full bg-blue-50 text-blue-600 mr-4">
                        <i class="fa-solid fa-basket-shopping text-xl"></i>
                    </div>
                    <div>
                        <p class="text-sm text-gray-500 font-medium">Total Commandes</p>
                        <p id="total-count" class="text-2xl font-bold text-gray-800">{{demandes.length}}</p>
                    </div>
                </div>
                <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-100 flex items-center opacity-60">
                    <div class="p-3 rounded-full bg-green-50 text-green-600 mr-4">
                        <i class="fa-solid fa-check-circle text-xl"></i>
                    </div>
                    <div>
                        <p class="text-sm text-gray-500 font-medium">Livr√©es (J)</p>
                        <p class="text-2xl font-bold text-gray-800">--</p>
                    </div>
                </div>
            </div>

            <div class="bg-white shadow-lg rounded-xl overflow-hidden border border-gray-100">
                <div class="px-6 py-4 border-b border-gray-200 bg-gray-50/50 flex justify-between items-center">
                    <h2 class="text-lg font-bold text-gray-800 flex items-center">
                        <i class="fa-solid fa-list-ul mr-2 text-slate-400"></i> File d'attente
                    </h2>
                    <div class="flex items-center text-xs text-gray-500">
                        <i class="fa-solid fa-rotate mr-1 animate-spin"></i> Live (AJAX)
                    </div>
                </div>
            <div class="text-xs text-gray-500 mt-1 italic">
                        <i class="fa-solid fa-prescription-bottle-medical mr-1"></i> M√©dicament posologie {{this.posologie}}
                                                                                       
            </div>
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-bold text-gray-500 uppercase tracking-wider">Ticket / Heure</th>
                                <th class="px-6 py-3 text-left text-xs font-bold text-gray-500 uppercase tracking-wider">M√©dicament</th>
                                <th class="px-6 py-3 text-left text-xs font-bold text-gray-500 uppercase tracking-wider">Paiement</th>
                                <th class="px-6 py-3 text-center text-xs font-bold text-gray-500 uppercase tracking-wider">√âtat</th>
                                <th class="px-6 py-3 text-right text-xs font-bold text-gray-500 uppercase tracking-wider">Actions</th>
                            </tr>
                        </thead>
                        <tbody id="orders-body" class="bg-white divide-y divide-gray-200">
                            {{#each demandes}}
                            <tr class="hover:bg-slate-50 transition-colors animate-fade-in group">
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-md text-sm font-medium bg-gray-100 text-gray-800">
                                        #{{this.id_short}}
                                    </span>
                                    <div class="text-xs text-gray-400 mt-1 flex items-center">
                                        <i class="fa-regular fa-clock mr-1"></i> {{this.dateCreation}}
                                    </div>
                                </td>
                                <td class="px-6 py-4">
                                    <div class="flex items-center">
                                        <div class="h-10 w-10 flex-shrink-0 bg-blue-50 rounded-lg flex items-center justify-center text-blue-600 mr-3">
                                            <i class="fa-solid fa-pills"></i>
                                        </div>
                                        <div>
                                            <div class="text-sm font-bold text-gray-900">{{this.medicamentNom}}</div>
                                            <div class="text-xs text-gray-500">Client Mobile</div>
                                        </div>
                                    </div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    {{#if this.isAssurance}}
                                        <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-purple-100 text-purple-800">
                                            <i class="fa-solid fa-file-medical mr-1"></i> ASSURANCE
                                        </span>
                                    {{else}}
                                        <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-green-100 text-green-800">
                                            <i class="fa-solid fa-money-bill-wave mr-1"></i> ESP√àCES
                                        </span>
                                    {{/if}}
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-center">
                                    {{#if this.isEnAttente}}
                                        <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-bold bg-orange-100 text-orange-700 border border-orange-200 animate-pulse">
                                            <i class="fa-solid fa-bell mr-1"></i> NOUVELLE
                                        </span>
                                    {{/if}}
                                    {{#if this.isAcceptee}}
                                        <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-bold bg-blue-100 text-blue-700 border border-blue-200">
                                            <i class="fa-solid fa-box-open mr-1"></i> PR√äTE
                                        </span>
                                    {{/if}}
                                    {{#if this.isEnCours}}
                                        <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-bold bg-indigo-100 text-indigo-700 border border-indigo-200">
                                            <i class="fa-solid fa-motorcycle mr-1"></i> EN ROUTE
                                        </span>
                                    {{/if}}
                                    {{#if this.isTerminee}}
                                        <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-bold bg-gray-100 text-gray-600">
                                            <i class="fa-solid fa-check mr-1"></i> TERMIN√âE
                                        </span>
                                    {{/if}}
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                    {{#if this.isEnAttente}}
                                        <div class="flex justify-end space-x-2">
                                            <button onclick="alert('Bient√¥t disponible')" class="text-red-500 hover:text-red-700 bg-red-50 hover:bg-red-100 p-2 rounded-lg transition-colors" title="Refuser">
                                                <i class="fa-solid fa-xmark"></i>
                                            </button>
                                            <button onclick="accepterDemande('{{this.id}}')" class="flex items-center bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg shadow-sm hover:shadow-md transition-all">
                                                <i class="fa-solid fa-check mr-2"></i> CONFIRMER
                                            </button>
                                        </div>
                                    {{/if}}
                                    {{#if this.isAcceptee}}
                                        <button onclick="assignerLivreur('{{this.id}}')" class="flex items-center ml-auto bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg shadow-sm hover:shadow-md transition-all animate-bounce">
                                            <i class="fa-solid fa-motorcycle mr-2"></i> APPELER LIVREUR
                                        </button>
                                    {{/if}}
                                    {{#if this.isEnCours}}
                                        <span class="text-xs text-gray-400 italic">Livreur notifi√©</span>
                                    {{/if}}
                                </td>
                            </tr>
                            {{else}}
                            <tr>
                                <td colspan="5" class="px-6 py-12 text-center text-gray-500">
                                    <div class="flex flex-col items-center justify-center">
                                        <div class="h-16 w-16 bg-gray-100 rounded-full flex items-center justify-center mb-4">
                                            <i class="fa-solid fa-mug-hot text-2xl text-gray-400"></i>
                                        </div>
                                        <p class="text-lg font-medium">Aucune commande en attente</p>
                                        <p class="text-sm">Profitez-en pour ranger le stock !</p>
                                    </div>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </main>
    </div>

    <script>
        const token = localStorage.getItem('token');
        if (!token) window.location.href = '/auth/web/login';
        
        document.getElementById('userNameDisplay').textContent = localStorage.getItem('userName') || 'Pharmacien';

        // Variable pour √©viter de jouer le son en boucle pour les m√™mes commandes d√©j√† vues
        let knownOrderIds = new Set(); 

        // Initialiser knownOrderIds avec les commandes d√©j√† pr√©sentes au chargement (rendu serveur)
        // Cela √©vite que le son joue au refresh de la page (F5) pour des commandes d√©j√† l√†.
        // On suppose que le serveur a rendu les IDs dans un attribut data ou on laisse vide pour l'instant.
        // Pour faire simple : on laisse vide, le son jouera au premier chargement si commandes en attente.

        // --- FONCTION DE MISE √Ä JOUR (AJAX) ---
        async function fetchOrders() {
            try {
                // IMPORTANT : Assurez-vous que votre backend a cette route qui renvoie le JSON
                const response = await fetch('/api/demandes', {
                    headers: { 'Authorization': 'Bearer ' + token }
                });
                
                if (!response.ok) return; // Si erreur serveur (ex: 401), on arr√™te discr√®tement
                
                const demandes = await response.json();

                // 1. Mise √† jour du compteur total
                const totalCounter = document.getElementById('total-count');
                if(totalCounter) totalCounter.textContent = demandes.length;
                
                // 2. Gestion du Son et des Notifications
                // On cherche s'il y a des commandes en attente qu'on ne connait pas encore
                const newOrders = demandes.filter(d => d.isEnAttente && !knownOrderIds.has(d.id));
                
                if (newOrders.length > 0) {
                    const audio = document.getElementById('notifSound');
                    // On tente de jouer le son (peut √™tre bloqu√© par le navigateur si pas d'interaction)
                    audio.play().catch(() => console.log("Son bloqu√© (attente interaction utilisateur)"));
                    
                    // On ajoute ces IDs √† la liste des connus pour ne plus sonner pour eux
                    newOrders.forEach(o => knownOrderIds.add(o.id));
                }

                // 3. Gestion du badge rouge (Menu Lat√©ral)
                const waitingCount = demandes.filter(d => d.isEnAttente).length;
                const badge = document.getElementById('badgeCount');
                if (badge) {
                    if (waitingCount > 0) {
                        badge.textContent = waitingCount;
                        badge.classList.remove('hidden');
                    } else {
                        badge.classList.add('hidden');
                    }
                }

                // 4. Construction du HTML du tableau
                const tbody = document.getElementById('orders-body');
                
                if (demandes.length === 0) {
                    tbody.innerHTML = `
                        <tr>
                            <td colspan="5" class="px-6 py-12 text-center text-gray-500">
                                <div class="flex flex-col items-center justify-center">
                                    <div class="h-16 w-16 bg-gray-100 rounded-full flex items-center justify-center mb-4">
                                        <i class="fa-solid fa-mug-hot text-2xl text-gray-400"></i>
                                    </div>
                                    <p class="text-lg font-medium">Aucune commande en attente</p>
                                    <p class="text-sm">Tout est calme.</p>
                                </div>
                            </td>
                        </tr>`;
                    return;
                }

                // G√©n√©ration des lignes du tableau
                const htmlRows = demandes.map(demande => {
                    return `
                    <tr class="hover:bg-slate-50 transition-colors animate-fade-in group">
                        <td class="px-6 py-4 whitespace-nowrap">
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-md text-sm font-medium bg-gray-100 text-gray-800">
                                #${demande.id_short}
                            </span>
                            <div class="text-xs text-gray-400 mt-1 flex items-center">
                                <i class="fa-regular fa-clock mr-1"></i> ${demande.dateCreation}
                            </div>
                        </td>
                        <td class="px-6 py-4">
                            <div class="flex items-center">
                                <div class="h-10 w-10 flex-shrink-0 bg-blue-50 rounded-lg flex items-center justify-center text-blue-600 mr-3">
                                    <i class="fa-solid fa-pills"></i>
                                </div>
                                <div>
                                    <div class="text-sm font-bold text-gray-900">${demande.medicamentNom}</div>
                                    <div class="text-xs text-gray-500">Client Mobile</div>
                                </div>
                            </div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            ${demande.isAssurance 
                                ? `<span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-purple-100 text-purple-800"><i class="fa-solid fa-file-medical mr-1"></i> ASSURANCE</span>`
                                : `<span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-green-100 text-green-800"><i class="fa-solid fa-money-bill-wave mr-1"></i> ESP√àCES</span>`
                            }
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-center">
                            ${demande.isEnAttente ? `<span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-bold bg-orange-100 text-orange-700 border border-orange-200 animate-pulse"><i class="fa-solid fa-bell mr-1"></i> NOUVELLE</span>` : ''}
                            ${demande.isAcceptee ? `<span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-bold bg-blue-100 text-blue-700 border border-blue-200"><i class="fa-solid fa-box-open mr-1"></i> PR√äTE</span>` : ''}
                            ${demande.isEnCours ? `<span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-bold bg-indigo-100 text-indigo-700 border border-indigo-200"><i class="fa-solid fa-motorcycle mr-1"></i> EN ROUTE</span>` : ''}
                            ${demande.isTerminee ? `<span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-bold bg-gray-100 text-gray-600"><i class="fa-solid fa-check mr-1"></i> TERMIN√âE</span>` : ''}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                            ${demande.isEnAttente ? `
                                <div class="flex justify-end space-x-2">
                                    <button onclick="alert('Bient√¥t disponible')" class="text-red-500 hover:text-red-700 bg-red-50 hover:bg-red-100 p-2 rounded-lg"><i class="fa-solid fa-xmark"></i></button>
                                    <button onclick="accepterDemande('${demande.id}')" class="flex items-center bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg shadow-sm"><i class="fa-solid fa-check mr-2"></i> CONFIRMER</button>
                                </div>` : ''
                            }
                            ${demande.isAcceptee ? `
                                <button onclick="assignerLivreur('${demande.id}')" class="flex items-center ml-auto bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg shadow-sm animate-bounce"><i class="fa-solid fa-motorcycle mr-2"></i> APPELER LIVREUR</button>` : ''
                            }
                            ${demande.isEnCours ? `<span class="text-xs text-gray-400 italic">Livreur notifi√©</span>` : ''}
                        </td>
                    </tr>
                    `;
                }).join('');

                tbody.innerHTML = htmlRows;

            } catch (error) {
                console.error("Erreur AJAX:", error);
            }
        }

        // --- ACTIONS (Modifi√©es pour rafra√Æchir localement) ---

        async function accepterDemande(id) {
            if(!confirm("üì¶ Confirmez-vous avoir ce produit en stock ?")) return;
            try {
                const res = await fetch(`/demandes/${id}/accepter`, { 
                    method: 'POST',
                    headers: { 'Authorization': 'Bearer ' + token }
                });
                
                if(res.ok) {
                    // On recharge les donn√©es imm√©diatement sans recharger la page
                    fetchOrders(); 
                } else {
                    alert("Erreur lors de la validation.");
                }
            } catch (e) { alert("Erreur r√©seau"); }
        }

        async function assignerLivreur(id) {
            if(!confirm("üèçÔ∏è Appeler le coursier le plus proche ?")) return;
            try {
                const res = await fetch(`/demandes/${id}/assigner-livreur`, { 
                    method: 'POST', 
                    headers: { 
                        'Content-Type': 'application/json',
                        'Authorization': 'Bearer ' + token 
                    },
                    body: JSON.stringify({ livreurId: 'demo-livreur-1' }) // Id√©alement dynamique
                });

                if(res.ok) {
                    alert("‚úÖ Livreur assign√© ! Suivi activ√©.");
                    fetchOrders(); // Rafra√Æchissement imm√©diat
                } else {
                    alert("Erreur serveur lors de l'assignation.");
                }
            } catch (e) { alert("Erreur r√©seau"); }
        }

        function logout() {
            localStorage.clear();
            window.location.href = '/auth/web/login';
        }

        // Lancer le polling AJAX toutes les 5 secondes
        setInterval(fetchOrders, 5000);

        // Note: On ne lance pas fetchOrders() tout de suite au d√©marrage 
        // car Handlebars a d√©j√† affich√© l'√©tat initial (SSR).
        // On laisse le setInterval prendre le relais apr√®s 5s.

    </script>
</body>
</html>
